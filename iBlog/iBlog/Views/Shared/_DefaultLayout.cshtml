<!DOCTYPE html>
<html lang="ru">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>Будь в фокусе</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />

    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/Bootstrap/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />
    <link href="~/Content/social-buttons.css" rel="stylesheet" />
    <link rel="stylesheet" href="../../Content/tags.css" type="text/css">
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper pos-rel">
            <div class="float-left">
                <div class="logo">
                    <p class="site-title">
                        <a href="/Home/Index">
                            <img src="../../Images/logoFocus.png" /></a>
                    </p>
                </div>
            </div>
            <div class="float-left search-header">
                <input id="searcher" type="text" placeholder="Поиск..." />
                <a id="loop-searcher" class="btn btn-primary" href="javascript:void(0)">
                    <img src="~/Images/search.png" /></a>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginOptional")
                </section>
            </div>
            <div class="unwatched-messages pos-abs">
                <a href="javascript:void(0)">
                    <img src="~/Images/OptionPost/message.png" alt="" />
                </a>
                <div class="count-messages pos-abs">101</div>
            </div>
        </div>
    </header>
    <div id="body">
        @RenderBody()
    </div>
    <div id="up">
        <p class="pPageScroll btn btn-primary">Вверх</p>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year — Царегородцев Вадим</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/bootstrap.min.js")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/bootbox.min.js"></script>
    <script src="~/Scripts/MainPage/tags.js"></script>
    <script src="~/Scripts/MainPage/WrapTags.js"></script>
    <script src="~/Scripts/MainPage/UserNavigations.js"></script>
</body>
</html>


